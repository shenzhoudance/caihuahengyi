
<div class="col-md-4 col-md-offset-4">
    <h2>新增文章</h2>

    <hr>
    <%= simple_form_for @post do |f| %>

    <% if @post.image.present? %>
    <span>配图</span> <br>
      <%= image_tag(@post.image.thumb.url) %>
    <% end %>

    <div class="group">
      <%= f.input :image, as: :file %>
    </div>

    <%= f.input :title, :label => "标题" %>
    <br>

    <%= f.input :body, :label => "叙述" %>
    <br>

    <%= f.input :price, :label => "价钱" %>

    <%= f.input :quantity, :label => "数量" %>

    <%= f.submit "修改", :disable_with => 'Submitting...' %>
    <% end %>

</div>
