
<div class="col-md-4 col-md-offset-4">
    <h2>新增文章</h2>

    <hr>
    <%= simple_form_for @post do |f| %>

    <% if @post.image.present? %>
    <span>配图</span> <br>
      <%= image_tag(@post.image.thumb.url) %>
    <% end %>

    <div class="group">
      <%= f.input :image, as: :file %>
    </div>

    标题
    <%= f.text_field :title %>
    <br>
    叙述
    <br>
    <%= f.text_area :body %>
    <br>

    <%= f.submit "Submit", :disable_with => 'Submitting...' %>
    <% end %>

</div>
