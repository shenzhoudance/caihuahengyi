<div class="col-md-4 col-md-offset-4">
    <h2>新增文章</h2>

    <hr>
    <%= simple_form_for @post do |f| %>
    <div class="group">
      <%= f.input :image, as: :file %>
    </div>

    <br>
    <div class="group">
      <%= f.input :title, :label => "标题"%>
    </div>
    <br>
    <div class="group">
      <%= f.input :information, :label => "产品介绍"%>
    </div>
    <br>
    <div class="group">
      <%= f.input :body,:label => "产品内容" %>
    </div>


    <%= f.submit "发表", :disable_with => 'Submitting...' %>
    <% end %>


</div>
