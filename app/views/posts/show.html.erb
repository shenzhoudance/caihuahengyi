

  <div class="col-md-12">
    <% if @post.image.present? %>
      <%= image_tag(@post.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
    <div class="post">
      <%= link_to("Edit", edit_post_path(@post), class: "btn btn-primary pull-right")%>
    </div>
    <h2><%= @post.title %></h2>
    <p><%= @post.body %></p>
    <p><%= @comment.body></p>
  </div>
