<div class="product-show-box">
  <div class="container">
    <!--===== 广告图 =====-->
    <section class="intro-box">
      <div class="row">
        <div class="col-md-12">
           <img src="https://ww2.sinaimg.cn/large/006tNc79ly1fmm29t61ztj30zk08c0zm.jpg" alt="Activities index intro">
        </div>
      </div>
    </section>

<div class="col-md-12">
  <table class="table table-hover">
    <h3>活动精选</h3>
    <thead>
      <tr>
        <td>活动名称</td>
        <td>活动内容</td>
      </tr>
    </thead>
    <tbody>
      <div class="activity">
        <% @activities.each do |activity|%>
        <tr>
          <td><%= link_to(activity.title, activity_path(activity))%></td>
          <td><%= link_to(activity.body) %></td>
          <td><%= link_to("编辑", edit_activity_path(activity))%></td>
          <td><%= link_to("删除", activity_path(activity), method: :delete, data: { confirm: "Are you sure?"}) %></td>
        </tr>
        <% end %>
      </div>
    </tbody>

      </table>
        </div>
        <%= link_to("新增活动", new_activity_path, class: "btn btn-default pull-right") %>
    </div>

</div>
