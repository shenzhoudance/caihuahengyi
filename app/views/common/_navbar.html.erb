<div class="row">
  <div class="col-md-12">
    <% if current_page?('/') %>
      <div class="navbar navbar-default navbar-fixed-top" role="navigation" id="navbar">
    <% else %>
      <div class="navbar navbar-default navbar-fixed-top scroll_navbar" role="navigation">
    <% end %>
      <div class="container">
        <div class="navbar-header">
          <!--=== 右侧下拉选单（移动端时显示） ===-->
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-4" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!--===== 网站 Logo/名称 =====-->
          <%= link_to root_path, class: "navbar-brand logo-box scroll" do %>
            <!-- <i class="fa fa-google-wallet"></i> 才华横溢 -->
            <a class="navbar-brand" href="/"><img src='<%= image_url 'logo.png' %>' >才华横溢</a>
          <% end %>
        </div>
        <div class="collapse navbar-collapse top-nav" id="menu-4">
          <!--=== 网站连结 ===-->
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to('学习', posts_path) %></li>
            <li><%= link_to('问答', posts_path) %></li>
            <li><%= link_to('就业', posts_path) %></li>
            <li><%= link_to('活动', posts_path) %></li>
          </ul>
          <!--=== 帐号操作 ===-->
      <ul class='nav navbar-nav  navbar-right'>
        <li class="divider" role="separator"></li>
            <li><%= link_to carts_path do %>
               购物车 <i class='fa fa-shopping-cart'></i> (<%= current_cart.posts.count %> )
               <% end %>
             </li> <!-- 购物车 -->
        <!-- 注册 / 登入 -->
        <li>
      <% if !current_user %>
            <li> <%= link_to('注册', new_user_registration_path) %></li>
            <li><%= link_to('登入',  new_user_session_path) %></li>
      <% else %>
        <!--=== 下拉选单 ===-->
        <li class='dropdown'>
          <a href='#' class='dropdown-toggle' data-toggle='dropdown'>
            Hi!, <%= current_user.email %>
             <b class='caret'></b>
          </a>
          <ul class='dropdown-menu'>
            <% if current_user.admin? %>
            <li> <%= link_to("Admin Panel", admin_posts_path) %> </li>
            <% end %>

            <li>  <%= link_to("个人订单列表", account_orders_path ) %> </li>
            <li class="divider"> </li>
            <% if !current_user.vip? %>
            <li> <%= link_to("购买会员", "#" ) %> </li>
            <% end %>
              <li class="divider"> </li>
            <li> <%= link_to('登出',destroy_user_session_path, method: :delete) %> </li>
          </ul>
        </li>
      <% end %>
      </li>
    </ul>
          <!--===== 搜索栏 =====-->
            <div class="input-group search-box">
              <input type="text" class="form-control" name="keyword" placeholder="想上什么课？" value="">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                  <span><i class="fa fa-search"></i></span> <!-- 搜索栏图标 -->
                </button>
              </div>
            </div>

        </div>
      </div>
    </div>
  </div>
</div>
